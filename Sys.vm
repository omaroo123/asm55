// Sys.vm
// Implements min, max, and range functions

// Sys.min - Returns the smaller of the two values
function Sys.min 0
    push argument 0   // Push x
    push argument 1   // Push y
    lt                // Check if x < y
    if-goto RETURN_X
    push argument 1   // Else, return y
    return
    label RETURN_X
    push argument 0
    return

// Sys.max - Returns the larger of the two values
function Sys.max 0
    push argument 0   // Push x
    push argument 1   // Push y
    gt                // Check if x > y
    if-goto RETURN_X
    push argument 1   // Else, return y
    return
    label RETURN_X
    push argument 0
    return

// Sys.range - Computes max(array) - min(array)
function Sys.range 0
    push argument 1
    push constant 1
    lt                // If n <= 1, return 0
    if-goto RETURN_ZERO

    push argument 0
    pop pointer 0     // Base address stored in `THIS`

    push that 0       // First element
    pop local 0       // min = array[0]
    pop local 1       // max = array[0]

    push constant 1
    pop local 2       // i = 1

    label LOOP
    push local 2
    push argument 1
    lt                // i < n
    if-goto CONTINUE
    goto COMPUTE_RANGE

    label CONTINUE
    push pointer 0
    push local 2
    add
    pop pointer 1     // Set `THAT` to array[i]

    push local 0
    push that 0
    call Sys.min 2
    pop local 0       // min = Sys.min(min, array[i])

    push local 1
    push that 0
    call Sys.max 2
    pop local 1       // max = Sys.max(max, array[i])

    push local 2
    push constant 1
    add
    pop local 2       // i++
    goto LOOP

    label COMPUTE_RANGE
    push local 1
    push local 0
    sub               // max - min
    return

    label RETURN_ZERO
    push constant 0
    return
